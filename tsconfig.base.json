{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        // "allowJs": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "test-support": ["./test-support"]
        },
        "lib": [
            "es2017",
            "es7",
            "es6"
            // "dom"
        ],
        "downlevelIteration": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "skipLibCheck": true
    }
}
